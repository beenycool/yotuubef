# --- Display Summary (Masked) ---
def mask_string(s, visible_chars=3):
    if not s: return "<not set>"
    s_len = len(s)
    if s_len <= visible_chars * 2: return "*" * s_len
    return s[:visible_chars] + "*" * (s_len - visible_chars * 2) + s[-visible_chars:]

